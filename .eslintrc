{
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": false
    }
  },
  "extends": "eslint:recommended",
  "rules": {
    "array-bracket-spacing": [2, "never"],
    "block-scoped-var": 2,
    "brace-style": [2, "1tbs"],
    "camelcase": 1,
    "computed-property-spacing": [2, "never"],
    "complexity": [2, 12],
    "curly": 2,
    "eol-last": 2,
    "indent": [2, 2, { "SwitchCase": 1, "MemberExpression": 1 }],
    "eqeqeq": [2, "smart"],
    "keyword-spacing": [2, { "before": true, "after": true }],
    "max-depth": [1, 3],
    "max-len": [1, 130],
    "max-nested-callbacks": [1, 3],
    "max-params": [1, 3],
    "max-statements": [1, 15],
    "new-cap": 1,
    "no-extend-native": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-trailing-spaces": 2,
    "no-unused-vars": 2,
    "no-use-before-define": 0,
    "object-curly-spacing": [2, "always", { "objectsInObjects": false }],
    "semi": [2, "always"],
    "space-infix-ops": 2,
    "space-unary-ops": 2,
    "quotes": [2, "single", "avoid-escape"]
  }
}
