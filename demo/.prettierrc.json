{
  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": false,
  "semi": false,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "endOfLine": "auto",

  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrderParserPlugins" : ["typescript", "decorators-legacy"],
  "importOrder": ["^@app/(.*)$", "^[./]"],
  "importOrderCaseInsensitive": true,
  "importOrderSeparation": true
}
